{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var x,y,n,c,m:integer;
begin
  m:=StrToInt(Edit1.Text); // Число столбцов
  n:=StrToInt(Edit2.Text); // Число строк
  StringGrid1.RowCount:=n;
  StringGrid1.ColCount:=m;
  StringGrid1.Cells[1,1]:= '№ п/п';
  for y:=0 to m-1 do
  for x:=0 to n-1 do
    StringGrid1.Cells[y,x]:=InputBox('Ввод числа','Введите число','0');
    Val(str1,c,code); // Ввод числа в ячейку
    Memo1.Lines.Add ('Нарисована таблица:'+IntToStr(n)+'x'+IntToStr(m));
end;


end.
