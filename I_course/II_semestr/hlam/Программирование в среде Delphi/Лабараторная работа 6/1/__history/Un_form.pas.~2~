unit Un_form;
interface
uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;
 Type
    Tstud=record                      { описание типа записи }
          fam:string[10];               { поле фамилии студента }
          matem:byte;                   { поля оценок  }
          fiz:byte;
          progr:byte;
          sb:real;                           { поле среднего балла }
      end;
    Tdar=array of Tstud;
  TForm1 = class(TForm)
    Label1: TLabel;
    Edit1: TEdit;
    Memo1: TMemo;
    Edit2: TEdit;
    Edit3: TEdit;
    Edit4: TEdit;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    Button5: TButton;
    Button6: TButton;
    Button7: TButton;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);

  private
    { Private declarations }
  public
    { Public declarations }
  end;
var
  Form1: TForm1;
  r: Tstud;
 implementation
{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var n,i:integer;
mas: array of Tstud;
begin
   Setlength(Mas,n);
   for i:= 0 to n-1 do
   begin r.fam:=Edit1.Text;                        {Заполнение полей записи}
   r.matem:=strtoint(Edit2.Text);
   r.fiz:=strtoint(Edit3.Text);
   r.progr:=strtoint(Edit4.Text);
   end;
end;

procedure TForm1.Button2Click(Sender: TObject);
var
n,i:integer;
mas: array of Tstud;
begin
Setlength(Mas,n);
for i := 0 to n-1 do
  begin
    Memo1.Lines[i]:=r.fam;
  end;



end;

end.

